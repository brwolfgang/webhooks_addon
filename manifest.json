{
  "manifest_version": 2,
  "name": "Webhooks",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "webhooks_addon@alcateia.eti.br",
      "strict_min_version": "42.0"
    }
  },

  "description": "Adds IFTTT webhooks to your context menus",

  "icons": {
    "24": "icons/hook_24.png",
    "48": "icons/hook_48.png",
    "96": "icons/hook_96.png",
    "128": "icons/hook_128.png"
  },

  "background": {
    "scripts": ["jquery.js", "webhooks_bg.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "permissions": [
    "*://*.ifttt.com/*",
    "contextMenus",
    "storage",
    "notifications"
  ]
}